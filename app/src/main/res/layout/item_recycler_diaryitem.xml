<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin_5dp"
    android:background="@color/default_background"
    app:cardCornerRadius="@dimen/card_radius_15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame">

        <ImageView
            android:id="@+id/mainIcon"
            android:layout_width="@dimen/mood_icon_35dp"
            android:layout_height="@dimen/mood_icon_35dp"
            android:layout_marginStart="@dimen/mood_icon_margin_start_25dp"
            android:layout_marginTop="@dimen/mood_icon_margin_top_5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_love" />

        <LinearLayout
            android:id="@+id/iconGroup"
            android:layout_width="0dp"
            android:layout_height="@dimen/mood_icon_35dp"
            android:layout_marginStart="@dimen/item_holder_margin_10dp"
            android:layout_marginEnd="@dimen/icon_group_margin_end_60dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_holder_margin_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mainIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_item_height_40dp"
            android:layout_marginStart="@dimen/mood_icon_margin_start_25dp"
            android:layout_marginEnd="@dimen/item_holder_margin_10dp"
            android:layout_marginBottom="@dimen/item_holder_margin_10dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLength="150"
            tools:text="notesssssssss234543sssssssss67566656453ssssssssssssss4345345345345345ssssssssssssssssssss1234124235ssssssssss"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_holder_margin_10dp"
            android:layout_marginEnd="@dimen/item_holder_margin_10dp"
            tools:text="10:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/selectIcon"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/item_holder_margin_10dp"
            android:layout_width="@dimen/mood_icon_35dp"
            android:layout_height="@dimen/mood_icon_35dp"
            android:layout_marginTop="@dimen/mood_icon_margin_top_5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/checkmark" />

        <TextView
            android:id="@+id/colorBadge"
            android:layout_width="@dimen/item_badge_width_10dp"
            android:layout_height="@dimen/item_badge_height_90dp"
            android:background="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>