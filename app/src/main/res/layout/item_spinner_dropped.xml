<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/moodView"
        android:layout_width="@dimen/spinner_image_50dp"
        android:layout_height="@dimen/spinner_image_50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angry" />

    <TextView
        android:id="@+id/moodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        app:layout_constraintStart_toEndOf="@+id/moodView"
        app:layout_constraintTop_toTopOf="@id/moodView"
        app:layout_constraintBottom_toBottomOf="@id/moodView"/>
</androidx.constraintlayout.widget.ConstraintLayout>